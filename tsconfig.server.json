{
    "compilerOptions": {
        "outDir": "lib",
        "target": "es6",
        "module": "commonjs",
        "strict": true,
        "allowJs": true,
        "strictNullChecks": false,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "target": "ES5",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "forceConsistentCasingInFileNames": true
    },
    "include": [
        "src"
    ]
}
